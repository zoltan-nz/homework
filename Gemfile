source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails'


#form builder
gem 'formtastic'

gem 'puma' #added for puma webserver support

#for haml support
gem 'haml'
gem 'haml-rails'

#pagination
gem 'will_paginate'

group :assets do

  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end


group :development, :test do
  gem 'debugger'

  #add a comment summarizing the current schema
  gem 'annotate'

  #more detailed error message
  gem 'better_errors'
  gem 'binding_of_caller'

  #for fancy console
  gem 'awesome_print'
  gem 'hirb'

  gem 'sqlite3'
end

group :production do
  gem 'pg'
end